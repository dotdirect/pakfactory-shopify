<div class="dashboard-container">
  <div class="container first_half">
    <div class="first_head">
      <h2>{{ section.settings.welcome_back_text }} {{ customer.first_name }}</h2>
      <span>
        <a href="{{ routes.account_logout_url }}" class="logout-a-tag">
          <svg
            fill="#494949"
            viewBox="0 0 32 32"
            version="1.1"
            xmlns="http://www.w3.org/2000/svg"
            transform="matrix(-1, 0, 0, 1, 0, 0)"
            stroke="#494949">
            <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
            <g
              id="SVGRepo_tracerCarrier"
              stroke-linecap="round"
              stroke-linejoin="round"></g>
            <g id="SVGRepo_iconCarrier">
              <path d="M3.651 16.989h17.326c0.553 0 1-0.448 1-1s-0.447-1-1-1h-17.264l3.617-3.617c0.391-0.39 0.391-1.024 0-1.414s-1.024-0.39-1.414 0l-5.907 6.062 5.907 6.063c0.196 0.195 0.451 0.293 0.707 0.293s0.511-0.098 0.707-0.293c0.391-0.39 0.391-1.023 0-1.414zM29.989 0h-17c-1.105 0-2 0.895-2 2v9h2.013v-7.78c0-0.668 0.542-1.21 1.21-1.21h14.523c0.669 0 1.21 0.542 1.21 1.21l0.032 25.572c0 0.668-0.541 1.21-1.21 1.21h-14.553c-0.668 0-1.21-0.542-1.21-1.21v-7.824l-2.013 0.003v9.030c0 1.105 0.895 2 2 2h16.999c1.105 0 2.001-0.895 2.001-2v-28c-0-1.105-0.896-2-2-2z"></path>
            </g>
          </svg>
          Logout</a>
      </span>
    </div>
    <main class="main-content">
      <div id="all-request-loader" class="loading-overlay__spinner hidden">
        {%- render 'icon-loading' -%}
      </div>
      <!--
        <div class="top-head">    <span style=" border-bottom:1px solid black; padding:30px; display:block; "> Quote Admin Dashboard</span>    <hr/>  </div>
      -->
      <div class="card content-card">
        <div class="table-and-pagination-elements-container">
          <div>
            <div class="content-card-header">
              <h5>{{ section.settings.all_request_heading }}</h5>
              <p>{{ section.settings.all_quote_request_subtext }}</p>
            </div>
            <div class="content-card-body">
              <div class="content-card_search">
                <svg
                  viewBox="0 0 24 24"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg">
                  <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                  <g
                    id="SVGRepo_tracerCarrier"
                    stroke-linecap="round"
                    stroke-linejoin="round"></g>
                  <g id="SVGRepo_iconCarrier">
                    <path
                      fill-rule="evenodd"
                      clip-rule="evenodd"
                      d="M15 10.5C15 12.9853 12.9853 15 10.5 15C8.01472 15 6 12.9853 6 10.5C6 8.01472 8.01472 6 10.5 6C12.9853 6 15 8.01472 15 10.5ZM14.1793 15.2399C13.1632 16.0297 11.8865 16.5 10.5 16.5C7.18629 16.5 4.5 13.8137 4.5 10.5C4.5 7.18629 7.18629 4.5 10.5 4.5C13.8137 4.5 16.5 7.18629 16.5 10.5C16.5 11.8865 16.0297 13.1632 15.2399 14.1792L20.0304 18.9697L18.9697 20.0303L14.1793 15.2399Z"
                      fill="#000000"></path>
                  </g>
                </svg>
                <input
                  type="text"
                  class="search-input"
                  id="search-quote-request"
                  placeholder="Search">
              </div>
              <div id="all-request-table-loader" class="loading-overlay__spinner hidden">
                {%- render 'icon-loading' -%}
              </div>
              <div class="card__table table-scroll">
                <table class="tb" id="tab1">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <!-- <th>Prospect ID</th><th>First Name</th><th>Last Name</th><th>Email</th> -->
                      <th>Product(s)</th>
                      <th>Status</th>
                      <th>Created At</th>
                    <!-- <th>Valid Until</th> -->
                    </tr>
                  </thead>
                  <tbody>
                    {% comment %} Quote list gets injected {% endcomment %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <div id="pagination" class="pagination-container"></div>

        </div>
      </div>
      <div class="info">
        <div class="card right-side-information-box">
          <div class="customer-information-header">
            <p class="customer-block-heading-font">{{ section.settings.profile_heading }}</p>
            <a style="background:none; border:none; color: rgb(98 153 46); text-decoration:none;" href="{{ routes.account_addresses_url }}">{{ section.settings.profile_edit_button_text }}</a>
          </div>
          <div class="information-block">
            <label class="custom-information-label">{{ section.settings.customer_information_heading }}</label>
            <p id="info-name">
              {{ customer.first_name }}
              {{ customer.last_name -}}
            </p>
            <p id="info-name" class="custom-information-small-p">
              {{ customer.email }}</p>
            <p id="info-mb" class="custom-information-small-p">
              {{ customer.phone }}</p>
            {% if customer.default_address %}
              <hr class="dashed-2">

              <label class="custom-information-label">{{ section.settings.shipping_information_heading }}</label>
              <p id="info-name">
                {{ customer.default_address.first_name }}
                {{ customer.default_address.last_name }}
              </p>
              <p class="custom-information-small-p">
                {{ customer.default_address.street }}, {{ customer.default_address.city }}, {{ customer.default_address.zip }}, {{ customer.default_address.country }}</p>
              <p class="custom-information-small-p">
                {{ customer.default_address.phone }}</p>
            {% endif %}

          </div>
        </div>

        <div
          class="card right-side-information-box"
          id="accounts-specialist-assigned"
          style="display:none;">
          <div class="customer-information-header">
            <p class="customer-block-heading-font">{{ section.settings.account_specialist_heading }}</p>
          </div>
          <div class="information-block">
            <p id="account-specialist-name">
              Smith
            </p>
            <p id="account-specialist-email" class="custom-information-small-p">
              smith@pakfactory.com</p>
            <p id="account-specialist-contact" class="custom-information-small-p">416-444-7132</p>
          </div>
        </div>

        <div class="card right-side-information-box" id="accounts-specialist-not-assigned">
          <div class="customer-information-header">
            <p class="customer-block-heading-font">{{ section.settings.account_specialist_heading }} - Not Assigned</p>
          </div>

          <div class="information-block not-assigned-block">
            <p>
              <strong>
                {{ section.settings.not_yet_assigned_text }}</strong>
            </p>
            <p>{{ section.settings.not_yet_assigned_subtext }}</p>

            <div style="display: flex; gap:16px; font-size: 14px; margin-top:16px;">
              <p>
                <strong>{{ section.settings.need_help_text }}</strong>
              </p>
              <p>
                Visit our
                <a href="/pages/contact-us">contact page</a>.
              </p>
            </div>

          </div>
        </div>
      </div>
    </main>
  </div>
