    <div class="last">    <div class="dashboard-header">     <span style="      border-bottom: 1px solid black;      padding: 30px;      display: block;    ">Quote Admin Dashboard</span>    </div>    <div class="quote-card">      <div class="quote-info">        <svg id="back" xmlns="http://www.w3.org/2000/svg" width="32px" height="32px" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">          <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>        </svg>        <span>Quote Request REQ-1000</span>        <p style="    line-height: 0px;">Review and respond to customer request</p>      </div>      <div class="button-group">        <button class="btn btn-primary">Create Proposal</button>        <button class="btn btn-secondary">Create Shopify Order</button>        <button class="btn btn-secondary">Archive</button>        <button class="btn btn-danger">Delete</button>      </div>    </div>  </div>
  -->
  <div class="container last" style="display: none;">
    <!--
      <div class="dashboard-header">        <span style="      padding: 30px; font-size:24px;  ">Quote Admin Dashboard</span>      </div>
    -->
    <div class="quote-card">
      <div class="back-button-div">
        <button id="back">
          <svg
            fill="#494949"
            width="18px"
            viewBox="0 0 32 35"
            xmlns="http://www.w3.org/2000/svg"
            stroke="#494949">
            <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
            <g
              id="SVGRepo_tracerCarrier"
              stroke-linecap="round"
              stroke-linejoin="round"></g>
            <g id="SVGRepo_iconCarrier">
              <path d="M14.19 16.005l7.869 7.868-2.129 2.129-9.996-9.997L19.937 6.002l2.127 2.129z"></path>
            </g>
          </svg>
          <span>
            Back</span>
        </button>
      </div>
    </div>

    <span id="loader"></span>
    <div class="mid-lav" id="mid-lav">
      <div class="quote-product-information-block">
        <div class="quote-info-heading">
          <div>
            <p>Quote Request</p>
          </div>
          <div>
            <p id="quote-id">Q1234</p>
          </div>
        </div>
        <div class="quote-products-customer-info-block">
          <div class="quote-products-block">
            <div class="each-quote-product">
              <div class="each-quote-product-header">
                <img
                  src="https://cdn.shopify.com/s/files/1/0924/3099/1671/files/c001_tab_lock_roll_end_corrugated_box_02.jpg?v=1747142327"
                  height="60px"
                  width="60px">
                <div class="quote-product-name-sku">
                  <p class="product-name">Magnetic Closure Boxes</p>
                  <p class="sku">SKU: 1234</p>
                </div>
              </div>
              <div class="each-quote-product-details">
                <div class="each-quote-product-details-sub-block">
                  <div>
                    <label>Quantity</label>
                    <p>1200, 2344</p>
                  </div>
                  <div>
                    <label>Variant</label>
                    <p>White</p>
                  </div>
                </div>
                <div class="each-quote-product-details-sub-block">
                  <div>
                    <label>Project Information</label>
                    <p>lorem</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="quote-customer-block">
            <div class="customer-info-sub-block">
              <p>{{ section.settings.customer_information_heading }}</p>
              <div class="customer-contact-info">
                <p style="font-weight:800;" id="first-name">John Doe</p>
                <p class="custom-information-small-p" id="email">
                  smith@pakfactory.com</p>
                <p class="custom-information-small-p" id="phone">416-444-7132</p>
              </div>
            </div>
            <div class="customer-info-sub-block">
              <p>{{ section.settings.shipping_information_heading }}</p>
              <div class="customer-contact-info">
                <p style="font-weight:800;" id="shipping-first-name">John Doe</p>
                <p class="custom-information-small-p" id="address">123 Fake Street, Toronto, M4Y 1Z4, Canada<br>416-123-1234</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div
  id="tooltipInfo"
  pending-status="{{ section.settings.status_pending_text }}"
  inProgress-status="{{ section.settings.status_in_progress_text }}"
  converted-status="{{ section.settings.status_converted_to_order_text }}"></div>

{% schema %}
  {
    "name": "All Quote Requests",
    "settings": [
      {
        "type": "text",
        "id": "welcome_back_text",
        "label": "Welcome Back Text",
        "default": "Welcome back"
      },
      {
        "type": "text",
        "id": "profile_heading",
        "label": "Profile Heading",
        "default": "Profile"
      },
      {
        "type": "text",
        "id": "customer_information_heading",
        "label": "Customer Information Heading",
        "default": "Customer Information"
      },
      {
        "type": "text",
        "id": "shipping_information_heading",
        "label": "Shipping Information Heading",
        "default": "Shipping Information"
      }, {
        "type": "text",
        "id": "account_specialist_heading",
        "label": "Account Specialist Heading",
        "default": "Account Specialist"
      }, {
        "type": "text",
        "id": "all_request_heading",
        "label": "All Request Heading",
        "default": "All Quote Requests"
      }, {
        "type": "text",
        "id": "all_quote_request_subtext",
        "label": "All Quote Request Subtext",
        "default": "Browse and manage all customer quote requests."
      }, {
        "type": "text",
        "id": "profile_edit_button_text",
        "label": "Profile Edit Button Text",
        "default": "Edit"
      }, {
        "type": "text",
        "id": "not_yet_assigned_text",
        "label": "Not Yet Assigned Text",
        "default": "Not Yet Assigned"
      }, {
        "type": "text",
        "id": "not_yet_assigned_subtext",
        "label": "Not Yet Assigned Subtext",
        "default": "A dedicated packaging specialist will be asssigned to your request shortly.."
      }, {
        "type": "text",
        "id": "need_help_text",
        "label": "Need Help Text",
        "default": "Need help in mean time?"
      }, {
        "type": "richtext",
        "id": "need_help_subtext",
        "label": "Need Help Subtext",
        "default": "<p>Visit our contact us page.</p>"
      }, {
        "type": "header",
        "content": "Status Tooltip Settings"
      }, {
        "type": "text",
        "id": "status_pending_text",
        "label": "Pending Status - Text",
        "default": "Your request is pending."
      }, {
        "type": "text",
        "id": "status_in_progress_text",
        "label": "In Progress Status - Text",
        "default": "Your request is currently being processed."
      }, {
        "type": "text",
        "id": "status_converted_to_order_text",
        "label": "Converted to Order Status - Text",
        "default": "Your quote request has been converted to order.."
      }
    ]
  }
{% endschema %}