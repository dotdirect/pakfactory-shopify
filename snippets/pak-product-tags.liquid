{% comment %}
  Snippet: product-tags
  Purpose: Display only the value after the colon in product tags.
  Example: 'style-property:magnetic-closure-boxes' â†’ 'magnetic-closure-boxes'
{% endcomment %}


<ul class="product-tags product__tags list-unstyled">
  {% for tag in product.tags %}
    {% assign simplified_tag = tag | split: ':' | last %}
    <li class="product-tags__tag">{{ simplified_tag }}</li>
  {% endfor %}
</ul>