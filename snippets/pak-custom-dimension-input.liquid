{%- comment -%}
  Reusable input field component.
  Accepts:
  - dimension: the name of the field (e.g., 'Width', 'Height')
  - section_id: optional â€“ fallback to 'global'
  - metric: the unit of measurement (e.g., 'in', 'cm')
{%- endcomment -%}

{% assign id_suffix = section_id | default: 'global' %}

<div class="field custom__field">
  <label class="field__label" for="{{ dimension }}-{{ id_suffix }}">
    {{ dimension }} ( {{ metric }} )<sup>*</sup>
  </label>
  <input
    class="field__input"
    type="number"
    name="properties[{{ dimension }} ({{ metric }})]"
    data-dimension="{{ dimension }}"
    data-metric="{{ metric }}"
    id="{{ dimension }}-{{ id_suffix }}"
    placeholder="{{ dimension }}"
    min="0"
    step="0.01"
    required>
</div>